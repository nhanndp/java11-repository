package homework;

import java.util.Scanner;

public class Ex04 {
	// Viết chương trình nhập vào một dãy các số nguyên từ bàn phím.
	// Tìm số lẻ lớn nhất trong dãy số và in ra.

	public static void main(String[] args) {
		Scanner ip = new Scanner(System.in);
		
		// Input amount of numbers in the array
		System.out.print("Numbers in array are: ");
		int n = Integer.parseInt(ip.nextLine());

		int[] array = new int[n];
		System.out.print("Input all numbers: ");
		for (int i = 0; i < n; i++) {
			array[i] = ip.nextInt();
		}
		
		System.out.print("The odd number in the array is: " + array[i]);
		for (int i = 0; i < n; i++) {
			if (array[i] % 2 != 0) {
			}
			else System.out.print("\n There are not any odd numbers in this array!");
		}
	}
}
