package homework;

public class Ex02 {
	public static void main(String[] args) {
		int a = 4, b = 7, c = 12, d = 18;

		long fa = 1, fb = 1, fc = 1, fd = 1;
		
		for (int i = 1; i <= a; i++) {
			fa *= i;
		}
		for (int i = 1; i <= b; i++) {
			fb *= i;
		}
		for (int i = 1; i <= c; i++) {
			fc *= i;
		}
		for (int i = 1; i <= d; i++) {
			fd *= i;
		}
		System.out.println("factorial of " + a + "is: " + fa );
		System.out.println("factorial of 7 is: " + fb );
		System.out.println("factorial of 12 is: " + fc );
		System.out.println("factorial of 18 is: " + fd );
		long sum = fa + fb + fc + fd;
		System.out.println("sum = " + sum);
	}
}